<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    tools:context=".Level_1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="39dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="131dp"
        android:background="#4DF032"
        android:editable="false"
        android:enabled="false"
        android:text="Bölüm 1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#3B61E9"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/secondButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <ImageButton
        android:id="@+id/fourthButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="100dp"
        android:onClick="fourth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/aziz" />

    <ImageButton
        android:id="@+id/secondButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="28dp"
        android:onClick="second"
        app:layout_constraintBottom_toTopOf="@+id/fourthButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ezel" />

    <ImageButton
        android:id="@+id/firstButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="29dp"
        android:onClick="first"
        app:layout_constraintBottom_toTopOf="@+id/thirdButton"
        app:layout_constraintEnd_toStartOf="@+id/secondButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.833"
        app:srcCompat="@drawable/kurtlar_vadisi" />

    <ImageButton
        android:id="@+id/thirdButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="100dp"
        android:onClick="third"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fourthButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baba" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="34dp"
        android:background="#E9DC6D"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/secondButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/rectangle_1" />

    <Button
        android:id="@+id/playPauseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="452dp"
        android:background="@drawable/play"
        android:onClick="playPause"
        app:backgroundTint="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="134dp"
        android:layout_height="17dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="464dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="464dp"
        android:text="00:00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>