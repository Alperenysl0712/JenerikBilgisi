<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="167dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movie_wallpaper" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="413dp"
        android:layout_height="173dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/music_wallpaper" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="409dp"
        android:layout_height="154dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baslik" />

    <Button
        android:id="@+id/play_Button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="128dp"
        android:onClick="play"
        android:text="OYNA"
        android:textColor="#CF405A"
        android:textSize="20sp"
        app:backgroundTint="#BF6AFCF3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/rules_Button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="128dp"
        android:onClick="rules"
        android:text="KURALLAR"
        android:textColor="#1915D4"
        android:textSize="20sp"
        app:backgroundTint="#BFF687F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/about_Button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="128dp"
        android:onClick="about"
        android:text="HAKKINDA"
        android:textColor="#3A300A"
        android:textSize="20sp"
        app:backgroundTint="#BFA0FF73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/exit_Button"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="128dp"
        android:onClick="exit"
        android:text="ÇIKIŞ"
        android:textColor="#015C05"
        android:textSize="20sp"
        app:backgroundTint="#BFF5F941"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>